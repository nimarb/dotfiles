// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "default_profile": "ask",
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-thinking-latest"
    },
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Ayu Dark",
  "vim_mode": true,
  "use_smartcase_search": true,
  "relative_line_numbers": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "auto_update": false,
  // not used for now!
  // "formatter": {
  // 	"language_server": {
  // 		"name": "biome"
  // 	}
  // },
  // "code_actions_on_format": {
  //   "source.fixAll.biome": true,
  //   "source.organizeImports.biome": true
  // },
  "journal": {
    "hour_format": "hour24",
    "path": "~/personal/notes/zed"
  },
  // until https://github.com/zed-industries/zed/issues/7334 is fixed for smaller width
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": false, // `za` toggles fold / zR/ZM opens/closes all folds
    "min_line_number_digits": 0
  },
  "preferred_line_length": 88,
  "wrap_guides": [80, 88, 120],
  // prefer biome over eslint: https://github.com/zed-industries/zed/pull/10911 , https://github.com/biomejs/biome-zed/issues/5
  "languages": {
    "TSX": {
      "language_servers": ["biome", "typescript-language-server", "!eslint"]
    },
    "TypeScript": {
      "language_servers": ["biome", "typescript-language-server", "!eslint"]
    },
    "JavaScript": {
      "language_servers": ["biome", "typescript-language-server", "!eslint"]
    },
    "Python": {
      "language_servers": ["ty"]
    }
  },
  "lsp": {
    //    "pyright": {
    //      "settings": {
    //        "python": {
    //          "pythonPath": ".venv/bin/python"
    //        }
    //      }
    //    }
    "ruff": {
      "initialization_options": {
        "settings": {
          "targetVersion": "py313",
          "lineLength": 88,
          "showSyntaxErrors": true,
          "lint": {
            "select": ["ALL"],
            "ignore": [
              "D",
              "S101",
              "E501",
              "ERA001" // ignore commented out code
            ]
          }
        }
      }
    }
  }
}
